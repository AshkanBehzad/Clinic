@using System.Web.Optimization
@using Clinic.Models;
@model Clinic.Models.User
@{
    Layout = null;
    ViewBag.Title = "ورود - سامانه مدیریت کلینیک" ;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/Content/style_sheet/lib-plugin/bootstrap.min.css");
    @Styles.Render("~/Content/style_sheet/app/app-sb.css");
    @Styles.Render("~/Content/style_sheet/fonts/font-awesome/font-awesome.min.css");
    @Styles.Render("~/Content/style_sheet/app/login.css");
    @Scripts.Render("~/Content/script/lib-plugin/jquery-1.11.0.js");
    @Scripts.Render("~/Content/script/lib-plugin/bootstrap.min.js");
    @Scripts.Render("~/Content/script/app/app-sb.js");
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">ورود</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                        {
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Username, new {@class = "form-control", @placeholder = "نام کاربری" })
                            </div>


                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = " گذرواژه" })
                            </div>

                            <div class="form-group">
                                    <input type="submit" value="ورود" class="btn btn-lg btn-block btn-signin" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
